<article>
  
  <h2><%= @cheese.name %></h2>
  
  <div class="row">
    <div class="span6">
      <table class="table table-striped table-bordered">
        <tbody>
          <tr>
            <th>Origin protected?</th>
            <td><%= if @cheese.origin_protected then "Yes" else "No" end %></td>
          </tr>
          <tr>
            <th>Milk type</th>
            <td><%= @cheese.milk_type.name %></td>
          </tr>
          <tr>
            <th>Country</th>
            <td><%= @cheese.country.name %></td>
          </tr>
          <tr>
            <th>Texture</th>
            <td><%= @cheese.texture.name %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="span3 offset3">
      <%= image_tag @cheese.image_url, :class => 'img-rounded img-polaroid' %>
    </div>
  </div>
  
</article>